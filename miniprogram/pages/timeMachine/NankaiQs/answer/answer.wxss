page {
  background-image: url(https://image.potatofield.cn/NankaiQs/NankaiQsback.png);
}

navigator {
  color: #7a0c6e;
}

.bar-button {
  background-color: #7a0c6e;
}

.bar-button__hover {
  background-color: #7a0c6e;
}

.return-button {
  background-color: #aaaaaa;
}

.return-button__hover {
  background-color: #919191;
}

.question {
  font-weight: bold;
  color: #7a0c6e;
}

.poster-canvas {
  width: 1620px;
  height: 1080px;
  position: fixed;
  top: 9999px;
}

radio .wx-radio-input {
   border-radius: 50%;
   width: 32rpx;
   height: 32rpx;
}

.image-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.534);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.correct-image {
  display: block;
  width: 60vw;
  height: 60vw;
  margin-left: auto;
  margin-right: auto;
  margin-top: 200rpx;
  margin-bottom: 100rpx;
  z-index: 10;
}

.text-color {
  color: #fff;
}